<script id="searchInputViewTemplate" type="html/template">

<div id="searchOrigin">
<input class="searchOrigin" type="text" name="searchOriginForm" placeholder="Origin" style="text-transform:uppercase"></input>
</div>
<br/>
<div id="searchDestination">
<input class="searchDestination" type="text" name="searchDestinationForm" placeholder="Destination" style="text-transform:uppercase"></input>
</div>
<br/>

<button type="submit" value="Submit">Submit</button>


