  <script id="flightTemplate" type="html/template">

    <h1>Seats</h1>
    
    <div class="flightInfo"
    <strong>Flight Number: </strong><span id="flight_number"></span>
    <br/>
    From: <span id="origin"></span>
    <span> / </span>
    To: <span id="destination"></span>
    <br/>
    Date: <span id="date"></span>
    <br/>
    Plane: <span id="plane">
    </div>


    <div id="seatBoard">
        <ul class="row1">
          <p></p>
          <li class="seat seat1" data-row='0' data-column='A'></li>
          <li class="seat seat2" data-row='0' data-column='B'></li>
          <li class="seat seat3" data-row='0' data-column='C'></li>
          <li class="seat seat4" data-row='0' data-column='D'></li>

        </ul>
        <ul class="row2">
          <li class="seat seat5" data-row='1' data-column='A'></li>
          <li class="seat seat6" data-row='1' data-column='B'></li>
          <li class="seat seat7" data-row='1' data-column='C'></li>
          <li class="seat seat8" data-row='1' data-column='D'></li>

        </ul>
    </div>

    <ul id="selectedSeat">
    </ul>

  </script>
